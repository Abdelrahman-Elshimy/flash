@model FlCash.Data.Gift

@{
    ViewData["Title"] = "Create";
}

<br />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-horizontal card card-info">
                <div class="card-header">
                    <h3 class="card-title">Mode Intro</h3>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Logo" class="control-label"></label>
                        <input style="padding:3px;" type="file" asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Coins" class="control-label"></label>
                        <input asp-for="Coins" class="form-control" />
                        <span asp-validation-for="Coins" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tickets" class="control-label"></label>
                        <input asp-for="Tickets" class="form-control" />
                        <span asp-validation-for="Tickets" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CorrectAnswers" class="control-label"></label>
                        <input asp-for="CorrectAnswers" class="form-control" />
                        <span asp-validation-for="CorrectAnswers" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

