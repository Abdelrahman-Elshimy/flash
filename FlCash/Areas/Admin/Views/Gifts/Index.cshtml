@model IEnumerable<FlCash.Data.Gift>

@{
    ViewData["Title"] = "Index";
}

<h2>Gifts</h2>
<p>
    @Html.ActionLink("Create New Gift", "Create", new { controller = "Gifts" },
         new { @class = "btn btn-primary" })
</p>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <!-- /.card -->

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Gifts</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Logo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Coins)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Tickets)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CorrectAnswers)
                                    </th>
                                    <th>Options</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (item.Logo != null)
                                            {
                                                <img src="@item.Logo" width="50" height="50" alt="Alternate Text" />
                                            }

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Coins)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tickets)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CorrectAnswers)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>